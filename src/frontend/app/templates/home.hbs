{{#if this.loading}}
  <div class="action-loader-panel">
    <div class="action-loader"></div>
  </div>
{{/if}}
{{#if this.showUpload}}
  {{#upload-modal hideUpload=(action "hideUpload") displayResult=(action "displayResult")
                  toggleLoading=(action "toggleLoading")}}{{/upload-modal}}
{{else if this.showResult}}
  {{#results-modal hideResult=(action "hideResult") result=result
                   toggleLoading=(action "toggleLoading")}}{{/results-modal}}
{{else if this.showShare}}
  {{#share-modal hideShare=(action "hideShare") displayShareDocument=(action "displayShareDocument")
                 documents=documents}}{{/share-modal}}
{{else if this.showShareDocument}}
  {{#share-document hideShareDocument=(action "hideShareDocument") id=documentId title=documentTitle
                    toggleLoading=(action "toggleLoading")}}{{/share-document}}
{{else if this.showInstructions}}
  <h1>Instructions Modal</h1>
{{/if}}
<div class="content-card">
  <h1>Share Documents</h1>
  <a {{action "displayShare"}}>
    <div class="card-icon">
      <i class="fa fa-share"></i>
    </div>
  </a>
</div>
<div class="content-card">
  <h1>Upload Image(s)</h1>
  <a {{action "displayUpload"}}>
    <div class="card-icon">
      <i class="fa fa-upload"></i>
    </div>
  </a>
</div>
<div class="content-card">
  <h1>Instructions</h1>
  <a {{action "displayInstructions"}}>
    <div class="card-icon">
      <i class="fa fa-question"></i>
    </div>
  </a>
</div>
